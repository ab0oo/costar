{
  "version": 1,
  "screen": {
    "id": "weather-left-b",
    "orientation": "landscape",
    "width": 320,
    "height": 240,
    "regions": [
      {
        "id": "weather-now",
        "widget": "weather-now",
        "x": 0,
        "y": 0,
        "w": 160,
        "h": 120,
        "draw_border": false
      },
      {
        "id": "forecast",
        "widget": "forecast",
        "x": 0,
        "y": 120,
        "w": 160,
        "h": 120,
        "draw_border": false
      },
      {
        "id": "clock-quarter",
        "widget": "clock-quarter",
        "x": 160,
        "y": 0,
        "w": 160,
        "h": 120,
        "draw_border": false
      },
      {
        "id": "adsb-nearest",
        "widget": "adsb-nearest",
        "x": 160,
        "y": 120,
        "w": 160,
        "h": 120,
        "draw_border": false
      }
    ]
  },
  "widget_defs": {
    "weather-now": {
      "type": "dsl",
      "update_ms": 1000,
      "settings": {
        "dsl_path": "/dsl/weather_now.json"
      }
    },
    "forecast": {
      "type": "dsl",
      "update_ms": 1000,
      "settings": {
        "dsl_path": "/dsl/forecast.json"
      }
    },
    "clock-quarter": {
      "type": "dsl",
      "update_ms": 1000,
      "settings": {
        "dsl_path": "/dsl/clock_analog_quarter.json",
        "use_sprite": "true"
      }
    },
    "adsb-nearest": {
      "type": "dsl",
      "update_ms": 1000,
      "settings": {
        "dsl_path": "/dsl/adsb_nearest.json",
        "use_sprite": "true"
      }
    }
  }
}
