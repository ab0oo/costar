{
  "version": 1,
  "data": {
    "source": "local_time",
    "poll_ms": 1000,
    "fields": {
      "hour": "hour",
      "minute": "minute",
      "second": "second",
      "date_long": {
        "path": "iso_local",
        "format": {
          "tz": "local",
          "time_format": "%B %d, %Y"
        }
      },
      "week_day": {
        "path": "iso_local",
        "format": {
          "tz": "local",
          "time_format": "Week %V, %A"
        }
      }
    }
  },
