        "type": "repeat",
        "var": "i",
        "count": 60,
        "start": 0,
        "step": 1,
        "nodes": [
          {
            "type": "circle",
            "x": "80 + cos(i * 6 - 90) * 60",
            "y": "72 + sin(i * 6 - 90) * 60",
            "r": 1,
            "color": "#7FB1FF",
            "bg": "#7FB1FF",
            "thickness": 1
          }
        ]
      },
      {
        "type": "repeat",
        "var": "h",
        "count": 12,
        "start": 0,
        "step": 5,
        "nodes": [
          {
            "type": "circle",
            "x": "80 + cos(h * 6 - 90) * 60",
            "y": "72 + sin(h * 6 - 90) * 60",
            "r": 2,
            "color": "#9FD3FF",
            "bg": "#9FD3FF",
            "thickness": 1
          }
        ]
      },
      {
        "type": "hand",
        "x": 80,
        "y": 72,
        "length": 28,
        "thickness": 3,
        "color": "#FFFFFF",
        "angle_expr": "(hour % 12) * 30 + minute * 0.5"
      },
      {
        "type": "hand",
